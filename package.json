{
  "name": "mern-boilerplate",
  "version": "0.0.1",
  "description": "MERN stack project boilerplate",
  "scripts": {
    "start": "node server",
    "dev": "yarn dev:client && yarn dev:server",
    "dev:client": "cross-env NODE_ENV=dev webpack-dev-server",
    "dev:server": "cross-env NODE_ENV=dev node server",
    "release": "yarn build:client && yarn build:server",
    "build:client": "cross-env NODE_ENV=prod webpack -p",
    "build:server": "cross-env NODE_ENV=prod node server",
    "clean": "rimraf dist",
    "slate": "rimraf node_modules && yarn",
    "lint": "eslint client server"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "author": "Arsam Sarabi <me@arsamsarabi.co.uk>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arsamsarabi/MERN-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/arsamsarabi/MERN-boilerplate/issues"
  },
  "homepage": "https://github.com/arsamsarabi/MERN-boilerplate#readme",
