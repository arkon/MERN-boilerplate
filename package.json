    "mdi": "^2.1.19",
    "mongoose": "^4.11.7",
    "promise-polyfill": "^7.0.2",
    "prop-types": "^15.6.0",
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dnd": "^2.5.4",
    "react-dnd-html5-backend": "^2.5.4",
    "react-dom": "^15.6.1",
    "react-helmet": "^3.1.0",
